<div class="container">
    <div class="row">
        <div class="col-xs-12 text-center" id="top-bar">
            <h1>Eat Dat TACO!</h1>
        </div>
        <div class="row">
            {{#each taco_data}}
            {{#unless this.devoured}}
            <div class="col-xs-9 text-center">
                <pre>{{this.id}}. {{this.taco_name}}</pre>
            </div>
            <div class="col=cs-3 text-center">
                <form method ="POST" action="/tacos/update?_method=PUT"
                class="button-size">
                <input type="hidden" name= "taco_id" type="text"
                value={{this.ad}}>
                <br>
                <button type="submit" class="btn btn-default">
                    Devour IT!
                </button>
                </form>
            </div>
            {{/unless}}
            {{/each}}
        </div>
    </div>
</div>